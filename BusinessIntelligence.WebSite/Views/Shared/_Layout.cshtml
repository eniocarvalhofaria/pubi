<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="Shortcut Icon" href="../../Content/Images/peixinhoFundoAzul-64.ico" type="image/x-icon" />
    <link href="@Url.Content("~/Content/site.css")" rel="stylesheet" type="text/css" />
    <!-- <link href="http://www.peixeurbano.com.br/Content/V2/newdesign/css/core.css" rel="stylesheet" type="text/css" /> -->
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/globalize.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/cultures/globalize.culture." + BusinessIntelligence.Helpers.CultureHelper.GetCurrentCulture() + ".js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.cookie.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/timepicker_plug/TimePickerAddOn.js")" type="text/javascript"></script>
    <script type="text/javascript">    
            $(function () {

                Globalize.culture("@BusinessIntelligence.Helpers.CultureHelper.GetCurrentCulture()"); @* Set appropriate culture *@


     
                $(".lang-picker").bind("mouseenter mouseleave", function(){

    
                $(this).toggleClass('hover');
                var size = $('a', this).size(); // number of links
                var height = $('a', this).height(); // link height
                var start = $(this).hasClass('hover') ? size : 1;
                $(this).stop(true, false).animate({ height: (height+2) * start }, 150);

                });
   
               
                $(".lang-picker a." + Globalize.culture().name.toLowerCase()).prependTo($(".lang-picker"));

                $(".trflags a").click(function(){
                if ($(this).hasClass(Globalize.culture().name.toLowerCase()))
                    return false; // do nothing
                    $.cookie("_culture", $(this).attr("class") , {expires : 365, path: '/'});
                 window.location.reload(); // reload 
                

                });
            });
    </script>
</head>
<body>
    <div class="page">
        <div id="regionHeader">
            <div class="wrapper">
                <div class="wrapperShadow clearfix">
                    <div id="siteName">
                        <h2>Business Intelligence</h2>
                    </div>
                    <div id="language">
                        @Html.Partial("Languages")
                    </div>
                    <div id="userLogged">
                        <a>@Html.Partial("_UserLogged")</a>
                    </div>
                </div>
            </div>
        </div>
        <div id="regionPrimaryNav">
            <div class="wrapper ">
                <div class="wrapperShadow clearfix">
                    <div id="primaryNav" class="clearfix">
                        <ul class="clearfix">
              <!--              <li>@Html.ActionLink(@BusinessIntelligence.I18n.Messages.Home.ToUpper(), "Index", "Home")</li>   -->
                            <li>@Html.ActionLink(@BusinessIntelligence.I18n.Messages.Dashboards.ToUpper(), "Index", "Dashboards")</li>
                            <li>@Html.ActionLink(@BusinessIntelligence.I18n.Messages.Reports.ToUpper(), "Index", "Dashboards")</li>
                                  <li>@Html.ActionLink(@BusinessIntelligence.I18n.Messages.Financial.ToUpper(), "Index", "Dashboards")</li>
                      <li>@Html.ActionLink(@BusinessIntelligence.I18n.Messages.About.ToUpper(), "About", "Home")</li>
                            <li class="login">@Html.Partial("_LogOnPartial")</li>
                        </ul>
                        <!--
                          <div id="logindisplay">
             
            </div>-->
                    </div>
                </div>
            </div>
        </div>
        <div id="regionSiteLogo">
            <div class="wrapper ">
                <div class="wrapperShadow">
                    <div id="siteLogo" class="en">
                        <img class="logo" src="http://s3.amazonaws.com/pu_mkt_BR/2013/logos/whitefish-small.png" alt="Peixe Urbano" />
                    </div>
                </div>
            </div>
        </div>
        <div id="regionMain">
            <div id="leftImage">
            </div>
            <div class="wrapper">
                <div class="wrapperShadow">
                    <div id="main">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
