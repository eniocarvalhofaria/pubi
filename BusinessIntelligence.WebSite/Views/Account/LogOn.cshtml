@model BusinessIntelligence.Models.LogOnModel

@{
    ViewBag.Title = @BusinessIntelligence.I18n.Messages.Logon;
}

<h2>Log On</h2>
<p
@String.Format(@BusinessIntelligence.I18n.Messages.LogonMessage, @Html.ActionLink(@BusinessIntelligence.I18n.Messages.Register, "Register"))

    
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, @BusinessIntelligence.I18n.Messages.LoginUnsucessful)

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <p>
                <input type="submit" value=@BusinessIntelligence.I18n.Messages.Logon />
            </p>
        </fieldset>
    </div>
}
